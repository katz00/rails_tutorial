<header>
  <nav class="navbar navbar-dark bg-dark">
    <%= link_to "sample app", root_path, class:"navbar-brand", id:"logo"%>
    <ul class="list-inline">
      <li class="list-inline-item"><%= link_to "Home",   root_path %></li>
      <li class="list-inline-item"><%= link_to "Help",   help_path %></li>
      <% if logged_in?%>
        <li class= "list-inline-item"><%= link_to "Users", '#'%></li>
        <div class="btn-group">
          <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Account
          </button>
          <div class="dropdown-menu dropdown-menu-dark bg-dark">
            <li class="dropdown-item"><%= link_to "Profile", user_path(@current_user)%></li>
            <li class="dropdown-item"><%= link_to "Settings", '#'%></li>
            <li class="dropdown-item"><%= link_to "Log out", logout_path, method: :delete %></li>
          </div>
        </div>
      <% else %>
        <li class="list-inline-item"><%= link_to "Log in", login_path%></li>
      <% end %>
    </ul>
  </nav>
</header>
