<% provide(:title, "Log in")%>

<div class="container py-4">
  <h1>Log in</h1>
    <div class="row">
      <div class="col-md-6 offset-md-3"> <!--bootstrap4でのoffsetの書き方-->
        <%= form_with(scope: :session, url: login_path, method: :post, local: true) do |f| %>

          <%= f.label :email%>
          <%= f.email_field :email, class:"form-control"%>

          <%= f.label :password%>
          <%= link_to "(Frogot my password)", new_password_reset_path %>
          <%= f.password_field :password, class:"form-control"%>

          <div class="form-group form-check">
            <%= f.check_box :remember_me, class:"form-check-input"%>
            <%= f.label :remember_me_on_this_computer, class:"form-check-label"%>
          </div>
          <%= f.submit "Log in", class:"btn btn-primary"%>
        <% end %>
        <p>New user?<%= link_to "Sign up now!", signup_path%></p>
      </div>
    </div>
</div>
